@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<head>
    <link href="~/css/login-partial/loginpartial.css" rel="stylesheet" />

</head>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

    <li class="nav-item">
         <img id="image-profile" src="https://imgur.com/yVjnDV8.png">
    </li>

    <li class="nav-item dropdown">

        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <strong>@User.Identity.Name</strong>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <a href="#" class="dropdown-item">
                <strong>Profile</strong>
            </a>
            <a href="#" class="dropdown-item">
                <strong>Private Messages</strong>
            </a>
            <a href="#" class="dropdown-item">
                <strong>Friends</strong>
            </a>
            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                <div class="dropdown-divider"></div>

                <strong>Logout</strong>
            </a>
        </div>
    </li>
        <li class="nav-item">
            <form  class="form-inline" asp-controller="Account" asp-action="Logout">
                <button  type="submit" class="nav-link btn btn-link text-dark"><span class="fa fa-logout"></span>Logout</button>
            </form>
        </li>
        <li class="nav-item">
            <a class="btn btn-light" asp-controller="Account" asp-action="" asp-route-id="1"><vc:notification/></a>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
        </li>

    }
</ul>